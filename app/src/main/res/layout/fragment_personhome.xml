<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b6dad7d7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rl_my_data"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#fff">

            <ImageView
                android:id="@+id/img_touxiang"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/touxiang" />

            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/tv_screenname"
                android:layout_alignStart="@+id/tv_screenname"
                android:layout_below="@+id/tv_screenname"
                android:gravity="center"
                android:text="某某某某某某" />

            <TextView
                android:id="@+id/tv_screenname"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/img_touxiang"
                android:layout_toEndOf="@+id/img_touxiang"
                android:layout_toRightOf="@+id/img_touxiang"
                android:gravity="center"
                android:text="高凯"
                android:textColor="#000"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/img_erweima"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:background="@drawable/erweima1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_my_trends"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="#fff"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="我的动态"
                android:textColor="#919191"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imgb_mytrends"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginEnd="19dp"
                android:layout_marginRight="19dp"
                android:background="@drawable/jinru" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_my_message"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="消息"
                android:textColor="#919191"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imgb_mymessage"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginEnd="19dp"
                android:layout_marginRight="19dp"
                android:background="@drawable/jinru" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_my_collect"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="收藏"
                android:textColor="#919191"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imgb_mycollect"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginEnd="19dp"
                android:layout_marginRight="19dp"
                android:background="@drawable/jinru" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_my_setting"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="设置"
                android:textColor="#919191"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imgb_mysetting"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginEnd="19dp"
                android:layout_marginRight="19dp"
                android:background="@drawable/jinru" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
