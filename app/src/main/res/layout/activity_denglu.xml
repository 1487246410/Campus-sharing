<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_bg"
    >

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/iv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/chuan"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_below="@+id/iv"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_width="330dp"
        android:layout_height="wrap_content">



    <LinearLayout
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:background="@drawable/shape_corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/login_user" />

            <EditText
                android:maxLength="10"
                android:id="@+id/et_login_username"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.01"
                android:background="@null"
                android:hint="用户名"
                android:textColor="#000"
                android:textColorHint="#fff" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dffcfbfb"
            />

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/login_pwd"/>

            <EditText
                android:inputType="textPassword"
                android:id="@+id/et_login_password"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:hint="密码"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@."
                android:textColor="#000"
                android:textColorHint="#fff"
                />
        </LinearLayout>

    </LinearLayout>


    </LinearLayout>


    <Button
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll"
        android:layout_marginTop="40dp"
        android:id="@+id/btn_login"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:text="登陆"
        android:textSize="20sp"
        android:textColor="#fff"
        android:background="@drawable/login_btn_select"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



    <LinearLayout
        android:id="@+id/ll_retrieve_pwd"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#4fcdd0d2"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView

            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="忘记密码？"
            android:textColor="#fff"
            android:textSize="20sp" />

        <ImageView
            android:layout_marginLeft="100dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/login_up"/>

    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.9dp"
            android:background="#e7e4e4"
            />

        <LinearLayout
            android:id="@+id/ll_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#4fcdd0d2"
            android:orientation="horizontal">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="没有账号，注册？"
                android:textColor="#fff"
                android:textSize="20sp" />

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="100dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/login_up"/>
        </LinearLayout>



    </LinearLayout>

</RelativeLayout>
